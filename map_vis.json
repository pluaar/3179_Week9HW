{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Total Number of Arrivals by State in Malaysia (2023) (in Thousands)",
  "width": 500,
  "height": 300,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/pluaar/3179_Week9HW/refs/heads/main/ne_10m_admin_1_states_provinces.json",
    "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/pluaar/3179_Week9HW/refs/heads/main/total_arrivals_2023.csv",
          "format": {"type": "csv"}
        },
        "key": "State",
        "fields": ["Total_Arrivals", "Total_Male_Arrivals", "Total_Female_Arrivals"]
      }
    },
    {
      "calculate": "datum.Total_Arrivals / 1000",
      "as": "Total_Arrivals_in_Thousands"
    },
    {
      "calculate": "datum.Total_Male_Arrivals / 1000",
      "as": "Total_Male_Arrivals_in_Thousands"
    },
    {
      "calculate": "datum.Total_Female_Arrivals / 1000",
      "as": "Total_Female_Arrivals_in_Thousands"
    }
  ],
  "mark": {"type": "geoshape", "stroke": "black"},
  "encoding": {
    "color": {
      "field": "Total_Arrivals_in_Thousands",
      "type": "quantitative",
      "scale": {"scheme": "greens"},
      "legend": {
        "title": "Total Arrivals (in Thousands)",
        "labelFontSize": 12,
        "titleFontSize": 10,
        "titleFontWeight": "bold"
      }
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "State"},
      {"field": "Total_Arrivals_in_Thousands", "type": "quantitative", "title": "Total Arrivals (in Thousands)"},
      {"field": "Total_Male_Arrivals_in_Thousands", "type": "quantitative", "title": "Total Male Arrivals (in Thousands)"},
      {"field": "Total_Female_Arrivals_in_Thousands", "type": "quantitative", "title": "Total Female Arrivals (in Thousands)"}
    ]
  }
}
